<form action="/records/new" method="POST">
  <div class="container mt-4">
    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label class="h6">*必填欄位</label>
      </div>

      <div class="col-4  d-flex">
        <label class="h6">請修改你的支出</label>
      </div>
    </div>

    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label for="name" class="h3">名稱*:</label>
      </div>

      <div class="col-4">
        <input type="text" class="form-control" name="name" id="name" placeholder="捷運" required>
      </div>
    </div>

    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2  d-flex justify-content-center">
        <label for="date" class="h3">日期*:</label>
      </div>

      <div class="col-4">
        <input type="date" class="form-control" name="date" id="date" placeholder="2019/04/23" required>
      </div>
    </div>

    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label for="category" class="h3">類別*:</label>
      </div>

      <div class="col-4">
        <select id="category" class="form-control" name="category" required>
          <option value="">請選擇</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>

        </select>
      </div>
    </div>


    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2 d-flex justify-content-center">
        <label for="amount" class="h3">金額*:</label>
      </div>

      <div class="col-4">
        <input type="number" class="form-control" name="amount" id="amount" placeholder="120" required>
      </div>
    </div>


    <div class="row justify-content-center form-group" id="search-bar">
      <div class="col-2">
      </div>

      <div class="col-4">
        <button type="submit" class="btn btn-primary btn-block">送出</button>
      </div>
    </div>

  </div>
</form>